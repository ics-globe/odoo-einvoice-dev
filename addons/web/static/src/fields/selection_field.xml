<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="web.SelectionField" owl="1">
        <t t-if="props.readonly">
            <span t-esc="string" t-att-raw-value="props.value" />
        </t>
        <t t-else="">
            <select class="o_input" t-on-change="onChange">
                <t t-foreach="props.options" t-as="option" t-key="option[0]">
                    <option
                        t-att-selected="option[0] === props.value"
                        t-att-value="serializeOption(option[0])"
                        t-esc="option[1]"
                    />
                </t>
            </select>
        </t>
    </t>

</templates>
