<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="web.BadgeSelectionField" owl="1">
        <t t-if="props.readonly">
            <span t-esc="string" t-att-raw-value="props.value" />
        </t>
        <t t-else="">
            <t t-foreach="props.options" t-as="option" t-key="option[0]">
                <span
                    t-attf-class="o_selection_badge {{ props.value === option[0] ? 'active' : '' }}"
                    t-att-value="option[0]"
                    t-esc="option[1]"
                    t-on-click="() => props.update(option[0])"
                />
            </t>
        </t>
    </t>

</templates>
