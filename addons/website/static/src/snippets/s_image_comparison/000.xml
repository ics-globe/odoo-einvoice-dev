<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="website.image.comparison.modal">
        <div role="dialog" class="modal o_technical_modal fade s_lightbox p-0">
            <div class="modal-dialog m-0">
                <div class="modal-content bg-transparent">
                    <main class="modal-body o_slideshow bg-transparent">
                        <button type="button" class="close text-white" data-dismiss="modal" style="position: absolute; right: 10px; top: 10px;">
                            <span role="img" aria-label="Close">Ã—</span>
                            <span class="sr-only">Close</span>
                        </button>
                        <section class="s_image_comparison pt24 pb24">
                            <div class="container">
                                <div class="col-lg-12">
                                    <figure class="figure">
                                        <img class="o_media_right figure-img img-thumbnail" t-att-src="images[0]"/>
                                        <img class="o_media_left figure-img img-thumbnail" t-att-src="images[1]"/>
                                        <input type="range" min="0" max="100" value="50"/>
                                        <div class="o_description o_right_description">
                                            <span class="o_default_snippet_text"><t t-esc="descriptions[0]"/></span>
                                        </div>
                                        <div class="o_description o_left_description">
                                            <span class="o_default_snippet_text"><t t-esc="descriptions[1]"/></span>
                                        </div>
                                    </figure>
                                </div>
                            </div>
                        </section>
                    </main>
                </div>
            </div>
        </div>
    </t>
</templates>
