<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="payment_acquirer_form" model="ir.ui.view">
        <field name="name">Mercado Pago Acquirer Form</field>
        <field name="model">payment.acquirer</field>
        <field name="inherit_id" ref="payment.payment_acquirer_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='acquirer']" position="inside">
                <group attrs="{'invisible': [('provider', '!=', 'mercado_pago')]}">
                    <field name="mercado_pago_public_key" attrs="{'required':[('provider', '=', 'mercado_pago'), ('state', '!=', 'disabled')]}" password="True"/>
                    <field name="mercado_pago_secret_key" attrs="{'required':[('provider', '=', 'mercado_pago'), ('state', '!=', 'disabled')]}" password="True"/>
                </group>
            </xpath>
        </field>
    </record>

</odoo>
