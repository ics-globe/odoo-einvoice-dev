<?xml version="1.0" encoding="utf-8"?>
<odoo noupdate="1">

    <record id="payment.payment_acquirer_razorpay" model="payment.acquirer">
        <field name="provider">razorpay</field>
        <field name="redirect_form_view_id" ref="razorpay_form"/>
        <field name="support_authorization">True</field>
        <field name="support_fees_computation">False</field>
        <field name="support_refund"></field>
        <field name="support_tokenization">False</field>
        <field name="allow_tokenization">False</field>
    </record>

    <record id="payment_method_razorpay" model="account.payment.method">
        <field name="name">Razorpay</field>
        <field name="code">razorpay</field>
        <field name="payment_type">inbound</field>
    </record>

</odoo>
