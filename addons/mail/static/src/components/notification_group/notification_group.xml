<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="mail.NotificationGroup" owl="1">
        <t t-if="notificationGroupView">
            <div class="o_NotificationListItem o_NotificationGroup" t-attf-class="{{ className }}" t-on-click="notificationGroupView.onClick" t-ref="root">
                <div class="o_NotificationListItem_sidebar o_NotificationGroup_sidebar">
                    <div class="o_NotificationListItem_imageContainer o_NotificationGroup_imageContainer o_NotificationGroup_sidebarItem">
                        <img class="o_NotificationListItem_image o_NotificationGroup_image rounded-circle" t-att-src="notificationGroupView.imageSrc" alt="Message delivery failure image"/>
                    </div>
                </div>
                <div class="o_NotificationListItem_content o_NotificationGroup_content">
                    <div class="o_NotificationGroup_header o_NotificationListItem_header">
                        <span class="o_NotificationListItem_name o_NotificationGroup_name text-truncate">
                            <t t-esc="notificationGroupView.notificationGroup.res_model_name"/>
                        </span>
                        <t t-if="notificationGroupView.notificationGroup.notifications.length > 1">
                            <span class="o_NotificationListItem_counter o_NotificationGroup_counter">
                                (<t t-esc="notificationGroupView.notificationGroup.notifications.length"/>)
                            </span>
                        </t>
                        <span class="o-autogrow"/>
                        <t t-if="notificationGroupView.notificationGroup.date">
                            <span class="o_NotificationListItem_date o_NotificationGroup_date">
                                <t t-esc="notificationGroupView.notificationGroup.date.fromNow()"/>
                            </span>
                        </t>
                    </div>
                    <div class="o_NotificationGroup_core d-flex align-items-baseline">
                        <span class="o_NotificationListItem_coreItem o_NotificationListItem_inlineText o_NotificationGroup_coreItem o_NotificationGroup_inlineText text-truncate">
                            <t t-if="notificationGroupView.notificationGroup.notification_type === 'email'">
                                An error occurred when sending an email.
                            </t>
                        </span>
                        <span class="o-autogrow"/>
                        <span class="o_NotificationListItem_coreItem o_NotificationListItem_markAsRead o_NotificationGroup_coreItem o_NotificationGroup_markAsRead fa fa-check" title="Discard message delivery failures" t-on-click="notificationGroupView.onClickMarkAsRead" t-ref="markAsRead"/>
                    </div>
                </div>
            </div>
        </t>
    </t>

</templates>
