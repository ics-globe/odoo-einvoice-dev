<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_tax_tree_inherits_l10n_es_edi_face" model="ir.ui.view">
            <field name="name">account.tax.tree.inherits.l10n_es_edi_face</field>
            <field name="inherit_id" ref="account.view_tax_tree"/>
            <field name="model">account.tax</field>
            <field name="arch" type="xml">
                <field name="country_id" position="after">
                    <field name="l10n_es_edi_face_tax_type"
                           string="Spanish Tax Type"
                           optional="hide"/>
                </field>
            </field>
        </record>

        <record id="view_tax_form_inherits_l10n_es_edi_face" model="ir.ui.view">
            <field name="name">account.tax.form.inherits.l10n_es_edi_face</field>
            <field name="model">account.tax</field>
            <field name="inherit_id" ref="account.view_tax_form"/>
            <field name="arch" type="xml">
                <field name="country_id" position="after">
                    <field name="l10n_es_edi_face_tax_type" attrs="{'invisible': [('country_id', '!=', %(base.es)d)]}"/>
                </field>
            </field>
        </record>
    </data>
</odoo>
