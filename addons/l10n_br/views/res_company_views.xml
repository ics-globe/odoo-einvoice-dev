<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_company_form" model="ir.ui.view">
        <field name="name">res.company.form</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='vat']" position="after">
                <field name="cpf_code" attrs="{'invisible': [('country_id', '!=', %(base.br)d)]}"/>
                <field name="ie_code" attrs="{'invisible': [('country_id', '!=', %(base.br)d)]}"/>
                <field name="im_code" attrs="{'invisible': [('country_id', '!=', %(base.br)d)]}"/>
                <field name="nire_code" attrs="{'invisible': [('country_id', '!=', %(base.br)d)]}"/>
            </xpath>
        </field>
    </record>
</odoo>
