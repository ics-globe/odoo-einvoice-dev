<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_partner_view_form" model="ir.ui.view">
        <field name="name">res.partner.view.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <field name="vat" position="after">
                <field name="l10n_tr_tax_office_id" attrs="{'invisible': [('country_code', '!=', 'TR')]}"/>
            </field>
        </field>
    </record>

    <record id="l10n_tr.partner_address_form" model="ir.ui.view">
        <field name="name">l10n_tr.partner.form.address</field>
        <field name="model">res.partner</field>
        <field name="priority" eval="900"/>
        <field name="arch" type="xml">
                <form>
                    <div class="o_address_format">
                        <field name="country_enforce_cities" invisible="True"/>
                        <field name="parent_id" invisible="True"/>
                        <field name="type" invisible="True"/>
                        <field name="country_code" invisible="True"/>
                        <field name="street" placeholder="Street..." class="o_address_street"/>
                        <div class="o_row" attrs="{'invisible': [('country_code','!=','TR')]}">
                            <field name="l10n_tr_area_id" placeholder="Area" style="flex: 1 1 auto"
                                   attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}"
                                   domain="[('city_id','=?',city_id),('city_id.state_id','=?',state_id)]"/>
                            <span> - </span>
                            <field name="l10n_tr_neighborhood_id" placeholder="Neighborhood" style="flex: 1 1 auto"
                                   attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}"
                                   domain="[('area_id','=?',l10n_tr_area_id),
                                            ('area_id.city_id','=?',city_id),
                                            ('area_id.city_id.state_id','=?',state_id)]"
                            />
                        </div>
                        <field name="street2" placeholder="Street 2..." class="o_address_street"
                               attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)],
                                       'invisible': [('country_code','=','TR')]}"/>
                        <field name="city_id"
                               placeholder="City"
                               class="o_address_city"
                               domain="[('country_id', '=?', country_id),('state_id','=?',state_id)]"
                               attrs="{'invisible': [('country_enforce_cities', '=', False)],
                                       'readonly': [('type', '=', 'contact'), ('parent_id', '!=', False)]}"
                               context="{'default_country_id': country_id, 'default_state_id': state_id, 'default_zipcode': zip}"/>
                        <field name="city"
                               placeholder="City"
                               class="o_address_city"
                               attrs="{'invisible': [('country_enforce_cities', '=', True), '|', ('city_id', '!=', False), ('city', 'in', ['',False])],
                                       'readonly': [('type', '=', 'contact'), ('parent_id', '!=', False)]}"/>
                        <field name="state_id"
                               class="o_address_state"
                               placeholder="State"
                               options="{'no_open': True, 'no_quick_create': True}"
                               attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}"
                               context="{'default_country_id': country_id}"/>
                        <field name="zip" placeholder="ZIP" class="o_address_zip"
                               attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}"/>
                        <field name="country_id"
                               placeholder="Country"
                               class="o_address_country"
                               attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}"
                               options='{"no_open": True, "no_create": True}'/>
                    </div>
                </form>
            </field>
    </record>

</odoo>
