<?xml version="1.0" encoding="utf-8"?>
<odoo>

<template id="job_edit_options" inherit_id="website.user_navbar" name="Edit Job Options">
    <xpath expr="//div[@id='edit-page-menu']" position="after">
        <t t-if="main_object._name == 'hr.job'" t-set="action" t-value="'hr_recruitment.action_hr_job'"/>
    </xpath>
</template>

<!-- Layout -->
<template id="layout" name="Jobs Layout">
    <t t-call="website.layout">
        <t t-set="additional_title">Jobs</t>
        <div id="wrap" class="o_website_hr_recruitment_jobs_list">
            <!-- Topbar -->
            <t t-call="website_hr_recruitment.index_topbar"/>
            <!-- Snippet area -->
            <div class="oe_structure"/>
            <!-- Content -->
            <div class="container-fluid">
                <div t-attf-class="row #{(opt_jobs_cards) and 'bg-100'}">
                    <t t-out="website_hr_recruitment_content"/>
                </div>
            </div>
            <!-- Snippet area -->
            <div class="oe_structure"/>
        </div>
    </t>
</template>

<!-- Index Topbar -->
<template id="index_topbar" name="Topbar">
    <nav class="navbar navbar-light border-top shadow-sm d-print-none">
        <div class="container">
            <div class="d-flex flex-column flex-md-row flex-md-wrap flex-lg-nowrap justify-content-between w-100">
                <!-- Title -->
                <span class="navbar-brand h4 my-0 mr-auto">
                    <t t-out="o_jobs_topbar_title"/>
                </span>
                <!-- Filters -->
                <t t-if="o_jobs_topbar_title == 'Jobs'">
                    <ul class="o_jobs_topbar_filters flex-md-nowrap nav pl-md-3"/>
                </t>
                <!-- Search bar -->
                <t t-call="website.website_search_box_input">
                    <t t-set="_classes" t-valuef="my-1"/>
                    <t t-set="search_type" t-valuef="jobs"/>
                    <t t-set="display_description" t-valuef="true"/>
                </t>
                <!-- Old search - on delete, also delete search_box
                <div class="d-flex align-items-center justify-content-end w-md-100 w-lg-25 pl-lg-3 pr-0">
                    <t t-call="website_hr_recruitment.search_box">
                        <t t-set="_searches" t-value="searches"/>
                        <t t-set="_placeholder">Search a job...</t>
                    </t>
                </div>
                -->
            </div>
        </div>
    </nav>
</template>

<!-- Search Box -->
<template id="search_box" inherit_id="website.website_search_box" primary="True">
    <xpath expr="//div[@role='search']" position="replace">
        <form t-attf-class="o_jobs_searchbar_form o_wait_lazy_js w-100 my-1 my-lg-0 #{_classes}"
              t-att-action="action if action else '/jobs'" method="get">
            <t t-set="search" t-value="search or _searches and _searches['search']"/>
            <t t-set="placeholder" t-value="placeholder or _placeholder"/>
            <t>$0</t>
            <t t-foreach="_searches" t-as="search">
                <input t-if="search != 'search' and search_value != 'all'" type="hidden"
                    t-att-name="search" t-att-value="search_value"/>
            </t>
            <t t-out="0"/>
        </form>
    </xpath>
</template>

<!-- Filter - Countries -->
<template id="job_filter_by_countries" inherit_id="website_hr_recruitment.index_topbar" customize_show="True" name="Filter by Countries" priority="10">
    <xpath expr="//ul[hasclass('o_jobs_topbar_filters')]" position="inside">
        <li class="nav-item dropdown mr-2 my-1">
            <a href="#" role="button" class="btn dropdown-toggle" data-toggle="dropdown">
                <i class="fa fa-map-marker"/>
                <t t-if="country_id" t-out="country_id.name"/>
                <t t-else=""><span t-attf-class="#{(opt_jobs_filter_departments or opt_jobs_filter_offices) and 'd-none d-md-inline-block'}">All Countries</span></t>
            </a>
            <div class="dropdown-menu">
                <a  t-attf-href="/jobs#{ '/department/%s' % slug(department_id) if department_id else '' }#{ '/office/%s' % office_id.id if office_id else '' }?all_countries=1"
                    t-attf-class="dropdown-item d-flex align-items-center justify-content-between nav-link#{'' if country_id else ' active'}">
                    All Countries
                    <span class="badge badge-pill badge-primary ml-2" t-out="count_per_country.get('all', '0')"/>
                </a>
                <t t-foreach="countries" t-as="country">
                    <t t-if="len(countries)" class="nav-item">
                        <a  t-attf-href="/jobs/country/#{ slug(country) }#{ '/department/%s' % slug(department_id) if department_id else '' }#{ '/office/%s' % office_id.id if office_id else '' }"
                            t-attf-class="dropdown-item d-flex align-items-center justify-content-between nav-link #{' active' if country_id and country_id.id == country.id else ''}">
                            <t t-out="country.name"/>
                            <span class="badge badge-pill badge-primary ml-2" t-out="count_per_country.get(country, '0')"/>
                        </a>
                    </t>
                </t>
            </div>
        </li>
    </xpath>
</template>

<!-- Filter - Departments -->
<template id="job_filter_by_departments" inherit_id="website_hr_recruitment.index_topbar" customize_show="True" name="Filter by Departments" priority="20">
    <xpath expr="//ul[hasclass('o_jobs_topbar_filters')]" position="inside">
        <li class="nav-item dropdown mr-2 my-1">
            <a href="#" role="button" class="btn dropdown-toggle" data-toggle="dropdown">
                <i class="fa fa-sitemap"/>
                <t t-if="department_id" t-out="department_id.name"/>
                <t t-else=""><span t-attf-class="#{(opt_jobs_filter_countries or opt_jobs_filter_offices) and 'd-none d-md-inline-block'}">All Departments</span></t>
            </a>
            <div class="dropdown-menu">
                <a  t-attf-href="/jobs#{ '/country/%s' % slug(country_id) if country_id else '' }#{ '/office/%s' % office_id.id if office_id else ''}"
                    t-attf-class="dropdown-item d-flex align-items-center justify-content-between nav-link#{'' if department_id else ' active'}">
                    All Departments
                    <span class="badge badge-pill badge-primary ml-2" t-out="count_per_department.get('all', '0')"/>
                </a>
                <t t-foreach="departments" t-as="department">
                    <t t-if="len(countries)" class="nav-item">
                        <a  t-attf-href="/jobs#{ '/country/%s' % slug(country_id) if country_id else '' }/department/#{ slug(department) }#{ '/office/%s' % office_id.id if office_id else '' }"
                            t-attf-class="dropdown-item d-flex align-items-center justify-content-between nav-link #{' active' if department_id and department_id.id == department.id else ''}">
                            <t t-out="department.name"/>
                            <span class="badge badge-pill badge-primary ml-2" t-out="count_per_department.get(department, '0')"/>
                        </a>
                    </t>
                </t>
            </div>
        </li>
    </xpath>
</template>

<!-- Filter - Offices -->
<template id="job_filter_by_offices" inherit_id="website_hr_recruitment.index_topbar" customize_show="True" name="Filter by Offices" priority="30">
    <xpath expr="//ul[hasclass('o_jobs_topbar_filters')]" position="inside">
        <li class="nav-item dropdown mr-2 my-1">
            <a href="#" role="button" class="btn dropdown-toggle" data-toggle="dropdown">
                <i class="fa fa-building"/>
                <t t-if="office_id">
                    <t t-out="office_id.city"/><t t-if="office_id.country_id">, <t t-out="office_id.country_id.name"/></t>
                </t>
                <t t-else=""><span t-attf-class="#{(opt_jobs_filter_countries or opt_jobs_filter_departments) and 'd-none d-md-inline-block'}">All Offices</span></t>
            </a>
            <div class="dropdown-menu">
                <a  t-attf-href="/jobs#{ '/country/%s' % slug(country_id) if country_id else '' }#{ '/department/%s' % slug(department_id) if department_id else '' }"
                    t-attf-class="dropdown-item d-flex align-items-center justify-content-between nav-link#{'' if office_id else ' active'}">
                    All Offices
                    <span class="badge badge-pill badge-primary ml-2" t-out="count_per_office.get('all', '0')"/>
                </a>
                <t t-foreach="offices" t-as="thisoffice">
                    <t t-if="len(offices)" class="nav-item">
                        <a  t-attf-href="/jobs#{ '/country/%s' % slug(country_id) if country_id else '' }#{ '/department/%s' % slug(department_id) if department_id else '' }/office/#{ thisoffice.id }"
                            t-attf-class="dropdown-item d-flex align-items-center justify-content-between nav-link #{' active' if office_id and office_id.id == thisoffice.id else ''}">
                            <t t-out="thisoffice.city"/><t t-if="thisoffice.country_id">, <t t-out="thisoffice.country_id.name"/></t>
                            <span class="badge badge-pill badge-primary ml-2" t-out="count_per_office.get(thisoffice, '0')"/>
                        </a>
                    </t>
                </t>
            </div>
        </li>
    </xpath>
</template>

<!-- Content -->
<template id="index" name="Layout">
    <!-- Sets -->
    <t t-set="opt_jobs_grid" t-value="is_view_active('website_hr_recruitment.opt_jobs_grid')"/>
    <t t-set="opt_jobs_full_width" t-value="is_view_active('website_hr_recruitment.opt_jobs_full_width')"/>
    <t t-set="opt_jobs_cards" t-value="is_view_active('website_hr_recruitment.opt_jobs_cards')"/>
    <t t-if="opt_jobs_grid" t-set="opt_jobs_size" t-value="'col-md-6 col-lg-4'"/>
    <t t-else="" t-set="opt_members_size" t-value="'col-xl-10'"/>
    <!-- Topbar -->
    <t t-set="o_jobs_topbar_title">Jobs</t>
    <t t-call="website_hr_recruitment.layout">
        <t t-set="website_hr_recruitment_content">
            <!-- Banner -->
            <section class="s_cover text-white text-center oe_img_bg o_bg_img_center pt64 pb64 w-100" data-snippet="s_cover" data-name="Cover" style="background-image: url('/website_hr_recruitment/static/src/img/job_image_7.jpg');">
                <div class="o_we_bg_filter bg-black-50"></div>
                <div class="container">
                    <div class="row">
                        <div class="col-lg-8 offset-lg-2 jumbotron rounded pt32 pb32 o_colored_level undefined o_cc o_cc3">
                            <h2 class="h1 font-weight-bold">Our Job Offers</h2>
                            <h3>Join us and help disrupt the enterprise market!</h3>
                            <p>
                                Join us, we offer you an extraordinary chance to learn, to
                                develop and to be part of an exciting experience and
                                team.
                            </p>
                        </div>
                    </div>
                </div>
            </section>
            <!-- Content -->
            <div t-attf-class="container#{(opt_jobs_full_width) and '-fluid px-5'} oe_website_jobs">
                <div class="row pt48 pb16">
                    <div class="col-lg" id="jobs_grid">
                        <div t-attf-class="row #{(not opt_jobs_grid) and 'flex-column'}">
                            <div t-if="not jobs" t-attf-class="alert alert-info p-5 mb-5 mx-lg-4 #{(opt_jobs_grid) and 'w-100'}">
                                <div class="text-center text-muted">
                                    <h3 class="css_editable_hidden"><a t-attf-href="/contactus">Contact us</a> for job opportunities.</h3>
                                    <h4 groups="hr_recruitment.group_hr_recruitment_manager">
                                        Create new job pages from the <strong><i>+New</i></strong> top-right button.
                                    </h4>
                                </div>
                            </div>
                            <div t-foreach="jobs" t-as="job" t-attf-class="col-lg#{(opt_jobs_grid and '-4')} mb32">
                                <t t-if="opt_jobs_cards">
                                    <a t-attf-href="/jobs/detail/#{ slug(job) }" t-attf-class="text-decoration-none#{' mt-3' if job_index else ''}">
                                        <t t-call="website_hr_recruitment.job_index_description"/>
                                    </a>
                                </t>
                                <t t-elif="not opt_jobs_cards">
                                    <t t-call="website_hr_recruitment.job_index_description"/>
                                </t>
                            </div>
                        </div>
                    </div>
                    <!-- Pager -->
                    <div class='navbar mb-3 w-100'>
                        <t t-call="website.pager">
                            <t t-set="classname" t-valuef="mx-auto"/>
                        </t>
                    </div>
                </div>
            </div>
        </t>
    </t>
</template>

<!-- Job Index Description -->
<template id="job_index_description" name="Job Index Description">
    <div t-attf-class="#{(opt_jobs_cards) and 'card card-default'} h-100">
        <div t-attf-class="#{(opt_jobs_cards) and 'card-body'} h-100" t-att-data-publish="job.website_published and 'on' or 'off'">
            <t t-if="opt_jobs_cards">
                <t t-call="website_hr_recruitment.job_index_description_plus"/>
            </t>
            <t t-elif="not opt_jobs_cards">
                <div class="o_recruitment_not_card p-5">
                    <a t-attf-href="/jobs/detail/#{ slug(job) }" t-attf-class="text-decoration-none#{' mt-3' if job_index else ''}">
                        <t t-call="website_hr_recruitment.job_index_description_plus"/>
                    </a>
                </div>
            </t>
        </div>
    </div>
</template>

<!-- Job Index Description + -->
<template id="job_index_description_plus" name="Job Index Description">
    <span t-if="not job.website_published" class="badge badge-danger mb8 p-2">unpublished</span>
    <h3 class="text-secondary mt0 mb4">
        <span t-field="job.name"/>
    </h3>
    <h5 t-if="job.no_of_recruitment &gt; 1">
        <t t-out="job.no_of_recruitment"/> open positions
    </h5>
    <div class="mt16 mb0" >
        <span t-field="job.description"/>
    </div>
    <div class="o_job_infos mt16">
        <span t-field="job.address_id" t-options='{"widget": "contact","fields": ["city"],"no_tag_br": True}'/>
        <div>
            <i class="fa fa-fw fa-clock-o" title="Publication date" role="img" aria-label="Publication date"/><span t-field="job.write_date" t-options='{"widget": "date"}'/>
        </div>
    </div>
</template>

<!-- Templates - Grid -->
<template id="opt_jobs_grid" inherit_id="website_hr_recruitment.index" active="False" customize_show="True" name="Grid Layout"/>

<!-- Templates - Full Width -->
<template id="opt_jobs_full_width" inherit_id="website_hr_recruitment.index" active="False" customize_show="True" name="Full Width Layout"/>

<!-- Templates - Cards -->
<template id="opt_jobs_cards" inherit_id="website_hr_recruitment.index" active="True" customize_show="True" name="Cards Design"/>

<!-- Job Detail -->
<template id="detail" name="Job Detail" track="1">
    <t t-call="website.layout">
        <t t-set="additional_title">Job Detail</t>
        <!-- Topbar -->
        <t t-set="o_jobs_topbar_title">
            <a t-attf-href="/jobs">
                <i class="fa fa-long-arrow-left text-primary mr-2"/>Jobs
            </a>
        </t>
        <t t-call="website_hr_recruitment.index_topbar"/>

        <div id="wrap" class="js_hr_recruitment">
            <!-- Job name -->
            <section class="pb32">
                <div class="container">
                    <div class="mt32">
                        <div class="float-right">
                            <a role="button" t-attf-href="/jobs/apply/#{job.id}" class="btn btn-primary btn-lg float-right">Apply Now!</a>
                        </div>
                        <h1 t-field="job.name"/>
                        <h5 class="font-weight-light" t-field="job.address_id" t-options='{"widget": "contact","fields": ["city"],"no_tag_br": True}'/>
                    </div>
                </div>
            </section>
            <!-- Job Description -->
            <t t-call="website_hr_recruitment.default_website_description"/>
            <div class="oe_structure">
                <section class="o_job_bottom_bar mt24 mb48">
                    <div class="text-center">
                        <a role="button" t-attf-href="/jobs/apply/#{job.id}" class="btn btn-primary btn-lg">Apply Now!</a>
                    </div>
                </section>
            </div>
        </div>
    </t>
</template>

<!-- Job Apply -->
<template id="apply">
    <t t-call="website.layout">
        <t t-set="additional_title">Apply Job</t>
        <!-- Topbar -->
        <t t-set="o_jobs_topbar_title">
            <a t-attf-href="/jobs/detail/#{job.id}">
                <i class="fa fa-long-arrow-left text-primary mr-2"/><span t-field="job.name"/>
            </a>
        </t>
        <t t-call="website_hr_recruitment.index_topbar"/>
        <div id="wrap"  class="container">
            <!-- Title -->
            <div class="py-5 border-bottom">
                <h1 t-if="job" class="text-left">
                    <span t-field="job.name"/>
                </h1>
                <h5 class="text-left mt-2 text-muted">
                    Job Application Form
                </h5>
            </div>
            <!-- Form -->
            <span class="hidden" data-for="hr_recruitment_form" t-att-data-values="{'department_id': job and job.department_id.id or '', 'job_id': job and job.id or ''}" />
            <div id="jobs_section" class="pt64 pb64 w-lg-50 mx-auto">
                <section id="forms" class="s_website_form" data-vcss="001" data-snippet="s_website_form">
                    <div class="container">
                        <form id="hr_recruitment_form" action="/website/form/" method="post" enctype="multipart/form-data" class="o_mark_required" data-mark="*" data-model_name="hr.applicant" data-success-mode="redirect" data-success-page="/job-thank-you" hide-change-model="true">
                            <div class="s_website_form_rows row s_col_no_bgcolor">
                                <div class="form-group col-12 s_website_form_field s_website_form_required s_website_form_model_required" data-type="char" data-name="Field">
                                    <div class="row s_col_no_resize s_col_no_bgcolor">
                                        <label class="col-form-label col-sm-auto s_website_form_label" style="width: 200px" for="recruitment1">
                                            <span class="s_website_form_label_content">Your Name</span>
                                            <span class="s_website_form_mark"> *</span>
                                        </label>
                                        <div class="col-sm">
                                            <input id="recruitment1" type="text" class="form-control s_website_form_input" name="partner_name" required=""/>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group col-12 s_website_form_field s_website_form_required" data-type="email" data-name="Field">
                                    <div class="row s_col_no_resize s_col_no_bgcolor">
                                        <label class="col-form-label col-sm-auto s_website_form_label" style="width: 200px" for="recruitment2">
                                            <span class="s_website_form_label_content">Your Email</span>
                                            <span class="s_website_form_mark"> *</span>
                                        </label>
                                        <div class="col-sm">
                                            <input id="recruitment2" type="email" class="form-control s_website_form_input" name="email_from" required=""/>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group col-12 s_website_form_field s_website_form_required" data-type="char" data-name="Field">
                                    <div class="row s_col_no_resize s_col_no_bgcolor">
                                        <label class="col-form-label col-sm-auto s_website_form_label" style="width: 200px" for="recruitment3">
                                            <span class="s_website_form_label_content">Your Phone Number</span>
                                            <span class="s_website_form_mark"> *</span>
                                        </label>
                                        <div class="col-sm">
                                            <input id="recruitment3" type="tel" class="form-control s_website_form_input" name="partner_phone" required=""/>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group col-12 s_website_form_field" data-type="text" data-name="Field">
                                    <div class="row s_col_no_resize s_col_no_bgcolor">
                                        <label class="col-form-label col-sm-auto s_website_form_label" style="width: 200px" for="recruitment4">
                                            <span class="s_website_form_label_content">Short Introduction</span>
                                        </label>
                                        <div class="col-sm">
                                            <textarea id="recruitment4" class="form-control s_website_form_input" style="height: 125px;" name="description"></textarea>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group col-12 s_website_form_field s_website_form_custom" data-type="binary" data-name="Field">
                                    <div class="row s_col_no_resize s_col_no_bgcolor">
                                        <label class="col-form-label col-sm-auto s_website_form_label" style="width: 200px" for="recruitment5">
                                            <span class="s_website_form_label_content">Resume</span>
                                        </label>
                                        <div class="col-sm">
                                            <input id="recruitment5" type="file" class="form-control s_website_form_input" name="Resume"/>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group col-12 s_website_form_field s_website_form_dnone">
                                    <div class="row s_col_no_resize s_col_no_bgcolor">
                                        <label class="col-form-label col-sm-auto s_website_form_label" style="width: 200px" for="recruitment6">
                                            <span class="s_website_form_label_content">Job</span>
                                        </label>
                                        <div class="col-sm">
                                            <input id="recruitment6" type="hidden" class="form-control s_website_form_input" name="job_id"/>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group col-12 s_website_form_field s_website_form_dnone">
                                    <div class="row s_col_no_resize s_col_no_bgcolor">
                                        <label class="col-form-label col-sm-auto s_website_form_label" style="width: 200px" for="recruitment7">
                                            <span class="s_website_form_label_content">Department</span>
                                        </label>
                                        <div class="col-sm">
                                            <input id="recruitment7" type="hidden" class="form-control s_website_form_input" name="department_id"/>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group col-12 s_website_form_submit" data-name="Submit Button">
                                    <div style="width: 200px;" class="s_website_form_label"/>
                                    <a href="#" role="button" class="btn btn-primary btn-lg s_website_form_send">Submit</a>
                                    <span id="s_website_form_result"></span>
                                </div>
                            </div>
                        </form>
                    </div>
                </section>
            </div>
            <div class="oe_structure mt-2"/>
        </div>
    </t>
</template>

<!-- Job Description -->
<template id="default_website_description" name="Job Description">
    <!-- Description text and ratings -->
    <section class="pt32">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 pb32">
                    <div class="lead">
                        <div t-if="job and job.description" t-field="job.description"/>
                        <p t-else="">
                            As an employee of our company, you will <b>collaborate with each department
                            to create and deploy disruptive products.</b> Come work at a growing company
                            that offers great benefits with opportunities to moving forward and learn
                            alongside accomplished leaders. We're seeking an experienced and outstanding
                            member of staff.
                            <br/><br/>
                            This position is both <b>creative and rigorous</b> by nature you need to think
                            outside the box. We expect the candidate to be proactive and have a "get it done"
                            spirit. To be successful, you will have solid solving problem skills.
                        </p>
                    </div>
                </div>
                <div class="col-lg-3 offset-lg-1 pb32">
                    <div class="s_rating pb8" data-vcss="001" data-icon="fa-star" data-snippet="s_rating">
                        <h6 class="s_rating_title">Customer Relationship</h6>
                        <div class="s_rating_icons o_not_editable">
                            <span class="s_rating_active_icons text-primary">
                                <i class="fa fa-star"/>
                                <i class="fa fa-star"/>
                                <i class="fa fa-star"/>
                                <i class="fa fa-star"/>
