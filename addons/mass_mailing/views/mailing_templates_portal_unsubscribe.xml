<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="page_mailing_unsubscribe" name="Unsubscribe">
        <t t-call="mass_mailing.layout">
            <t t-call="mass_mailing.unsubscribe_form"/>
        </t>
    </template>

    <template id="unsubscribe_form">
        <div class="container o_unsubscribe_form"
             id="o_mailing_subscription"
             t-att-data-blacklist-enabled="blacklist_enabled"
             t-att-data-blacklist-possible="blacklist_possible"
             t-att-data-document-id="document_id"
             t-att-data-is-blacklisted="is_blacklisted"
             t-att-data-email="email"
             t-att-data-email-normalized="email_normalized"
             t-att-data-mailing-id="mailing_id"
             t-att-data-token="token">
            <div class="row">
                <form action="/mail/mailing/unsubscribe" method="POST" id="unsubscribe_form" class="col-lg-6 offset-lg-3 mt-4">
                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                    <input type="hidden" name="email" t-att-value="email"/>
                    <input type="hidden" name="mailing_id" t-att-value="mailing_id"/>
                    <input type="hidden" name="res_id" t-att-value="res_id"/>
                    <input type="hidden" name="unsubscribed_list" t-att-value="unsubscribed_list"/>

                    <div>
                        <t t-if="contacts">
                            <div id="o_mailing_subscription_info" class="alert alert-success" role="status">
                                <div id="o_mailing_subscription_info_message">
                                    <t t-if="unsubscribed_list">
                                        You have been <strong>successfully unsubscribed from <t t-out="unsubscribed_list"/></strong>.
                                    </t>
                                    <t t-else="">
                                        You have been <strong>successfully unsubscribed</strong>.
                                    </t>
                                </div>
                                <div id="div_feedback">
                                    <p>We would appreciate if you provide feedback about why you updated<br/>your subscriptions</p>
                                    <textarea class="form-control"  name="opt_out_feedback" cols="60" rows="3"></textarea>
                                    <br/>
                                    <div class="btn btn-primary text-left" id="button_feedback">Send</div>
                                </div>
                            </div>

                            <h1 class="o_page_header">Mailing Subscriptions</h1>
                            <p>Choose your mailing subscriptions</p>
                            <div id="o_mailing_subscription_list_manage">
                                <ul class="list-group">
                                    <t t-foreach="list_ids" t-as="list_id">
                                        <t t-if="list_id.is_public == True">
                                            <li class="list-group-item">
                                                <input type="checkbox"
                                                       name="contact_ids"
                                                       t-att-disabled="'disabled' if is_blacklisted else None"
                                                       t-att-value="list_id['id']"
                                                       t-att-checked="None if list_id['id'] in opt_out_list_ids else 'checked'"/>
                                                <t t-esc="list_id.name"/>
                                                <span t-if="list_id['id'] in opt_out_list_ids"
                                                      class="o_mailing_portal_list_unsubscribed">
                                                    Unsubscribed
                                                </span>
                                            </li>
                                        </t>
                                    </t>
                                </ul>

                                <div class="mb64 pt-3">
                                    <div class="o_mailing_blacklist float-right">
                                        <button class="btn btn-link pr-0 text-uppercase"
                                             style="display: none;"
                                             id="button_blacklist_add">
                                            Blacklist Me
                                        </button>
                                        <button class="btn btn-link pr-0 text-uppercase"
                                             style="display: none;"
                                             id="button_blacklist_remove">
                                            Come Back
                                        </button>
                                    </div>
                                    <button type="submit" id="send_form"
                                            t-att-disabled="'disabled' if is_blacklisted else None"
                                            class="btn btn-primary">
                                        Update my subscriptions
                                    </button>
                                </div>
                            </div>

                        </t>
                        <t t-else="">
                            <div class="alert alert-info text-center" role="status">
                                <p>You are not subscribed to any of our mailing list.</p>
                            </div>
                        </t>
                    </div>
                </form>
            </div>
        </div>
    </template>

    <template id="page_mailing_unsubscribe_done" name="Unsubscribed">
        <t t-call="mass_mailing.layout">
            <t t-call="mass_mailing.unsubscribe_done"/>
        </t>
    </template>

    <template id="unsubscribe_done">
        <div class="container o_unsubscribe_form" id="o_mailing_subscription">
            <div class="row">
                <input type="hidden" name="email" t-att-value="email"/>
                <input type="hidden" name="mailing_id" t-att-value="mailing_id"/>
                <input type="hidden" name="res_id" t-att-value="res_id"/>
                <div class="col-lg-6 offset-lg-3">
                    <h1 class="o_page_header">Mailing Subscriptions</h1>

                    <div id="o_mailing_subscription_info" class="alert alert-success text-center" role="status">
                        <p>You have been successfully <strong>unsubscribed</strong>!</p>
                    </div>

                    <div t-if="list_ids" class="alert alert-warning">
                        <p class="text-center">You were still subscribed to those newsletters. You will not receive any news from them anymore:</p>
                        <ul class="list-group mb-4">
                            <t t-foreach="list_ids" t-as="list_id">
                                <t t-if="list_id.is_public == True">
                                    <li class="list-group-item bg-transparent">
                                        <strong><t t-esc="list_id.name"/></strong>
                                    </li>
                                </t>
                            </t>
                        </ul>
                    </div>

                    <div t-if="show_blacklist_button" class="mb64">
                        <div class="btn btn-secondary float-end" id="button_add_blacklist" style="display:none">Blacklist Me</div>
                        <div class="btn btn-secondary float-end" id="button_remove_blacklist" style="display:none">Come Back</div>
                    </div>
                </div>
            </div>
        </div>
    </template>
</odoo>
