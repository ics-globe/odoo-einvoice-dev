<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="inline_form">
        <div t-attf-id="test-container-{{acquirer_id}}">
            <div class="row mt-8">
                <div class="form-group col-lg-12">
                    <input name="acquirer_id" type="hidden" id="acquirer_id" t-att-value="id"/>
                    <input name="partner_id" type="hidden" t-att-value="partner_id"/>
                </div>
                <div class="form-group col-lg-12">
                    <input type="text" name="customer_input" id="customer_input" class="form-control"
                           placeholder="Test Card Information"/>
                </div>
            </div>
            <div class="row mt-8">
                <div class="form-group col">
                    <label>
                        <input type="radio" name="status"
                            value="done" title="Payment successful" checked="True"/>
                        Payment successful
                    </label>
                </div>
                <div class="form-group col">
                    <label>
                        <input type="radio" name="status" value="pending" title="Payment pending"/>
                        Payment pending
                    </label>
                </div>
                <div class="form-group col">
                    <label>
                        <input type="radio" name="status" value="cancel" title="Payment canceled"/>
                        Payment canceled
                    </label>
                </div>
                <div class="form-group col">
                    <label>
                        <input type="radio" name="status" value="error" title="Payment error"/>
                        Payment error
                    </label>
                </div>
            </div>
        </div>
    </template>

</odoo>
