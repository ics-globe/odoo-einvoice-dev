<?xml version="1.0"?>
<odoo>
    <record id="digest_digest_test_form" model="ir.ui.view">
        <field name="name">digest.digest.test.form</field>
        <field name="model">digest.digest.test</field>
        <field name="arch" type="xml">
            <form string="Send a Sample Digest">
                <p class="text-muted">Send a sample digest for testing purpose to the address below.</p>
                <group>
                    <field name="email_to" placeholder="email1@example.com&#10;email2@example.com"/>
                </group>
                <footer>
                    <button string="Send" name="send_mail_test" type="object" class="btn-primary" data-hotkey="q"/>
                    <button string="Cancel" class="btn-secondary" special="cancel" data-hotkey="z"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
