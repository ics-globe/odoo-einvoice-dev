<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_move_form_inherit_l10n_es_edi_tbai" model="ir.ui.view">
            <field name="name">account.move.form.inherit.l10n_es_edi_tbai</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[last()]" position='after'>
                    <page id="l10n_es_tbai_tab" string="TicketBAI" attrs="{'invisible': [('l10n_es_tbai_is_required', '=', False)]}">
                        <sheet id="l10n_es_tbai_info">
                            <group>
                                <field name="l10n_es_tbai_is_required" invisible="1"/>
                                <field name="l10n_es_tbai_chain_index" groups="base.group_no_one"/>
                                <field name="l10n_es_tbai_post_xml_id" groups="base.group_no_one"/>
                                <field name="l10n_es_tbai_cancel_xml_id" groups="base.group_no_one"/>
                                <field name="l10n_es_tbai_sequence"/>
                                <field name="l10n_es_tbai_number"/>
                                <field name="l10n_es_tbai_registration_date"/>
                                <field name="l10n_es_tbai_refund_reason"
                                    attrs="{
                                    'readonly': [('state', '!=', 'draft')], 
                                    'invisible': [('l10n_es_tbai_refund_reason', '=', False)]
                                }"/>
                                <field name="l10n_es_tbai_id"/>
                                <field name="l10n_es_tbai_qr"/>
                                <field name="l10n_es_tbai_qr_escaped" groups="base.group_no_one"/>
                                <field name="l10n_es_tbai_signature" style="word-break: break-word;" groups="base.group_no_one"/>
                            </group>
                        </sheet>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
